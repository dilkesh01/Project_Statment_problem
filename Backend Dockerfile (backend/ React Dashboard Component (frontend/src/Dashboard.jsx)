import React, { useEffect, useState } from "react";
import axios from "axios";
import { BarChart, Bar, XAxis, YAxis, Tooltip, ResponsiveContainer } from "recharts";

function Dashboard({ issuerId }) {
  const [scoreData, setScoreData] = useState(null);

  useEffect(() => {
    axios.get(`/api/credit-score/${issuerId}`)
      .then(res => setScoreData(res.data))
      .catch(() => setScoreData(null));
  }, [issuerId]);

  if (!scoreData) return <div>Loading...</div>;

  const chartData = Object.entries(scoreData.explanation).map(([key, value]) => ({
    name: key,
    value: Number(value.toFixed(2))
  }));

  return (
    <div style={{ width: "100%", height: 300 }}>
      <h2>Credit Score: {scoreData.score.toFixed(2)}</h2>
      <ResponsiveContainer>
        <BarChart data={chartData}>
          <XAxis dataKey="name" />
          <YAxis />
          <Tooltip />
          <Bar dataKey="value" fill="#4f46e5" />
        </BarChart>
      </ResponsiveContainer>
    </div>
  );
}

export default Dashboard;
